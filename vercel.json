{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/main.py"
    }
  ],
  "env": {
    "MAX_FILE_SIZE": "10485760",
    "ALLOWED_FILE_TYPES": "txt,pdf,jpg,jpeg,png,gif,bmp"
  }
}